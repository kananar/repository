@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2> Register</h2>
                            
                        </div>
                        <div class="login-form">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly">gfgdxfhjhgjfhjgjdhj</div>
                            <form method="post">

                                <input asp-for="Name" placeholder="Name">
                                <span class="text text-danger" asp-validation-for="Name"></span>
                                <input asp-for="SurName" placeholder="SurName">
                                <span class="text text-danger" asp-validation-for="SurName"></span>
                                <input asp-for="UserName" placeholder="UserName">
                                <span class="text text-danger" asp-validation-for="UserName"></span>

                                <input asp-for="Email" placeholder="Email">
                                <span class="text text-danger" asp-validation-for="Email"></span>

                                <input asp-for="Password" placeholder="Password">
                                <span class="text text-danger" asp-validation-for="Password"></span>

                                <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                                <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>


                                <div class="button-box">

                                    <div class="login-toggle-btn">
                                        <input asp-for="Terms">
                                        <label for="remember">I Agree</label>
                                        <a asp-controller="account" asp-action="login">Alrady Has Account?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

