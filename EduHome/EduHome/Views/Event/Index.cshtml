<!-- Blog Start -->
<div class="blog-area event-area three text-center pt-150 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    @await Html.PartialAsync("/Views/Shared/_eventPartial.cshtml", Model)
                </div>
                </div>
                 
                   
                    <div class="col-md-4">
                        <div class="blog-sidebar right text-left">
                            <div class="single-blog-widget mb-50">
                                <h3>search</h3>
                                <div class="blog-search">
                                    <form method="get" asp-action="Index">
                                        <input class="searh" type="search" placeholder="Search blog title and description" value="@ViewData["GetEventDetails"]" name="EventSearch" />
                                        <button type="submit">
                                            <span><i class="fa fa-search"></i></span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            <div class="single-blog-widget mb-50">
                                <h3>categories</h3>
                                <ul>
                                    @foreach (var item in ViewBag.Categorys)
                                    {
                                        <li><a href="#">@Html.Raw(item.Name) </a></li>
                                    }

                                </ul>
                            </div>
                            <div class="single-blog-widget mb-50">
                                <div class="single-blog-banner">
                                    <a href="blog-details.html" id="blog"><img src="~/assets/img/blog/blog-img.jpg" alt="blog"></a>
                                    <h2>best<br> eductaion<br> theme</h2>
                                </div>
                            </div>
                            <div class="single-blog-widget mb-50">
                                <h3>latest post</h3>
                                <div class="single-post mb-30">
                                    <div class="single-post-img">
                                        <a href="blog-details.html">
                                            <img src="~/assets/img/post/post1.jpg" alt="post">
                                            <div class="blog-hover">
                                                <i class="fa fa-link"></i>
                                            </div>
                                        </a>
                                    </div>
                                    <div class="single-post-content">
                                        <h4><a href="blog-details.html">English Language Course for you</a></h4>
