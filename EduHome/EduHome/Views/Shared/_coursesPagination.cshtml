@model List<Course>


<div class="row">

    @foreach (Course course in Model)
    {
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="single-course mb-70">
                <div class="course-img">
                    <a asp-controller="course" asp-action="deteails" asp-route-Id="@course.Id">
                        <img src="~/assets/img/course/@course.Img" alt="course">
                        <div class="course-hover">
                            <i class="fa fa-link"></i>
                        </div>
                    </a>
                </div>
                <div class="course-content">
                    <h3><a asp-controller="course" asp-action="deteails" asp-route-Id="@course.Id">@Html.Raw(course.Name)</a></h3>
                    <p>@Html.Raw(course.HowToApply.Substring(0, 100))</p>
                    <a class="default-btn" asp-controller="course" asp-action="deteails" asp-route-Id="@course.Id">read more</a>
                </div>
            </div>
        </div>
    }
</div>
