
@{
    ViewData["Title"] = "Create";
}

@model Course
<div style="background-color:gainsboro" class="container">
    <div class="card-body row">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post" class="forms-sample" enctype="multipart/form-data">


            <div  style="margin-bottom:20px; margin-top:20px;" class="col-md-6">
                <label style="margin-bottom:10px;  font-size:20px;" font-size:20px;" asp-for="@Model.ImageFile">Course Image</label>
                <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.ImageFile"></span>

            </div>

            <div class="row">

                <div class="col-md-4" >
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.Name"> Course Name</label>
                    <textarea id="editor"  asp-for="@Model.Name" type="text" ></textarea>
                    <span  class="mt-2 text text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="col-md-4">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.Description">Course Description  </label>
                    <textarea asp-for="@Model.Description" type="text" ></textarea>
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.Description"></span>
                </div>
                <div class="col-md-4">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.AboutCourse">About Course</label>
                    <textarea asp-for="@Model.AboutCourse" type="text" id="editor2"></textarea>
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.AboutCourse"></span>
                </div>
                <div class="col-md-4">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.HowToApply"> How To Apply  </label>
                    <textarea asp-for="@Model.HowToApply" type="text" id="editor3"></textarea>
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.HowToApply"></span>
                </div>
                <div class="col-md-4">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.Serftication"> Cerftication  </label>
                    <textarea asp-for="@Model.Serftication" type="text" id="editor4"></textarea>
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.Serftication"></span>
                </div>


            </div>
            <div class="col-md-4 ">
                <label asp-for="@Model.Starts">Course Start </label>
                <input asp-for="@Model.Starts" type="date" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.Starts"></span>
            </div>

            <div class="col-md-4 ">
                <label asp-for="@Model.Duration">Course Duration</label>
                <input asp-for="@Model.Duration" type="text" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.Duration"></span>
            </div>
            <div class="col-md-4 ">
                <label asp-for="@Model.ClassDuration">ClassDuration</label>
                <input asp-for="@Model.ClassDuration" type="text" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.ClassDuration"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="@Model.SkillLevel">Skill Level</label>
                <input asp-for="@Model.SkillLevel" type="text" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.SkillLevel"></span>
            </div>
            <div class="col-md-4 ">
                <label asp-for="@Model.Language">Language</label>
                <input asp-for="@Model.Language" type="text" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.Language"></span>
            </div>
            <div class="col-md-4 ">
                <label asp-for="@Model.Student">Student Count</label>
                <input asp-for="@Model.Student" type="number" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.Student"></span>
            </div>
            <div class="col-md-4 ">
                <label asp-for="@Model.Price"> Course Price</label>
                <input asp-for="@Model.Price" type="number" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.Price"></span>
            </div>
            <div class="col-md-4 ">
                <label asp-for="@Model.Assesment">Assesment</label>
                <input asp-for="@Model.Assesment" type="text" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.Assesment"></span>
            </div>

            
            <div class="col-md-4 ">
                <label class="form-label" asp-for="@Model.CategoryId">Category Name</label>

                <select class="form-select" asp-for="@Model.CategoryId">
                    @foreach (var item in ViewBag.Category)
                    {
                        <option value="@item.Id">@Html.Raw(item.Name)</option>
                    }
                </select>

            </div>

            <div class="col-md-4 ">
                <label class="form-label" asp-for="@Model.TagIds">Tag Name</label>

                <select class="form-select" asp-for="@Model.TagIds">

                    @foreach (var item in ViewBag.Tags)
                    {

                        <option value="@item.Id">@Html.Raw(item.Name)</option>

                    }
                </select>
                <span class="mt-2 text text-danger" asp-validation-for="@Model.TagIds"></span>
            </div>

            <div class="col-md-12 mt-3">
                <a class="btn btn-dark" asp-controller="setting" asp-action="index"><i class="fas fa-undo"></i> Back</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

}
@section Script{
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("editor")
        CKEDITOR.replace("editor1")
        CKEDITOR.replace("editor2")
        CKEDITOR.replace("editor3")
        CKEDITOR.replace("Description")
        CKEDITOR.replace("editor4")
    </script>
}


