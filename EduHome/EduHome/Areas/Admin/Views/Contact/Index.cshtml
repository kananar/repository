@model List<Contact>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Message</th>
                <th scope="col">Delete</th>
              

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>

                <td>@item.Id</td>

                <td>@item.Email</td>



                <td>@item.Text</td>

                <td><a class=" delete-item" asp-controller="contact" asp-action="delete" asp-route-id="@item.Id"><i class="fas fa-trash text text-danger"></i></a></td>

            </tr>
            }



        </tbody>


    </table>

</div>

